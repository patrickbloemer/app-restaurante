@model IEnumerable<Harvin.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos Pendentes</h2>

<p>
    @Html.ActionLink("Criar novo Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.horarioPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horarioEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pendencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pagamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.horarioPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.horarioEntrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pendencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pagamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.pedidoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.pedidoId }) |
            @Html.ActionLink("Finalizar", "Delete", new { id=item.pedidoId })
        </td>
    </tr>
}
</table>
